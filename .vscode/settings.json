{
  // --- ðŸŽ¨ APARÃŠNCIA (Igual ao seu Python) ---
  "window.zoomLevel": 1,
  "editor.fontSize": 18,
  "workbench.colorTheme": "One Dark Modern",
  "workbench.iconTheme": "material-icon-theme",
  "terminal.integrated.fontSize": 18,

  // Fontes
  "editor.fontFamily": "'Fira Code', Consolas, 'Dank Mono', 'Source Code Pro', monospace",
  "editor.fontLigatures": false,

  // --- ðŸš€ CONFIGURAÃ‡ÃƒO PRINCIPAL DO SENAI ---
  // ForÃ§a o terminal a ser o GIT BASH nesta pasta
  "terminal.integrated.defaultProfile.windows": "Git Bash",

  // --- ðŸ’» PERFIS DE TERMINAL ---
  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "source": "PowerShell",
      "icon": "terminal-powershell"
    },
    "Git Bash": {
      "path": ["C:\\Program Files\\Git\\bin\\bash.exe"],
      "icon": "terminal-bash"
    }
  },

  // --- COMPORTAMENTO GERAL (Web/Full Stack) ---
  "editor.rulers": [80, 120],
  "explorer.compactFolders": false,

  // Formatar ao salvar (Ajuda muito em HTML/CSS)
  "editor.formatOnSave": true,

  "cSpell.enabled": true,
  "liveServer.settings.donotShowInfoMsg": true,

  // ConfiguraÃ§Ãµes do Git
  "git.autofetch": true,
  "git.enableSmartCommit": true,
  "git.confirmSync": false
}
